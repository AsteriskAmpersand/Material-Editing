RunTemplate();
int i;
int cnt=head.shaderCount;
string filename;
int shaderPos[cnt];
int shaderLength[cnt];
for(i=0;i<cnt-1;i++){
    shaderPos[i] = shaderDatas.shaderData[i].pos;
    shaderLength[i] = shaderDatas.shaderData[i].length;
}
shaderPos[i] = shaderDatas.shaderDataShort.pos;
shaderLength[i] = shaderDatas.shaderDataShort.length;
int filenum = GetFileNum();
for(i=0;i<cnt;i++){
    SPrintf( filename, "E:\\MHW Shader Research\\MHW-Research\\shdr\\%d.shdr", i);
    SetSelection( shaderPos[i], shaderLength[i] );
    CopyToClipboard();
    FileNew("Hex");
    PasteFromClipboard();
    if( FileSave( filename ) < 0 )
    {
        MessageBox( idOk, GetScriptName(), "An error occured writing file '%s'.", filename );
        return -1;
    }
    FileClose();
    FileSelect( filenum );
}